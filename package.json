{
  "name": "ncw-sample",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "serve": "node dist/server.js",
    "dev": "nodemon src/server.ts",
    "migrate": "yarn run typeorm migration:run",
    "start": "yarn migrate && yarn serve",
    "test": "yarn jest",
    "lint": "yarn eslint src --fix",
    "typeorm": "ts-node ./node_modules/typeorm/cli.js -d src/data-source.ts",
    "docker:plantuml:start": "docker run -d --name plantuml --rm -p 127.0.0.1:8080:8080 plantuml/plantuml-server:jetty",
    "docker:plantuml:stop": "docker stop plantuml",
    "db:diagram": "yarn docker:plantuml:start && ts-node ./node_modules/.bin/typeorm-uml src/data-source-opts.ts --plantuml-url=http://127.0.0.1:8080 --download ../assets/images/model.png && yarn docker:plantuml:stop",
    "db:diagram:public": "ts-node ./node_modules/.bin/typeorm-uml src/data-source-opts.ts --download ../assets/images/model.png",
    "prepare": "husky install"
  },
  "lint-staged": {
    "src/**/*.ts": "eslint src --fix",
    "**/*": "prettier --write --ignore-unknown"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "agentkeepalive": "^4.5.0",
    "axios": "^1.5.0",
    "body-parser": "^1.20.1",
    "coinmarketcap-js": "^1.7.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "fireblocks-sdk": "^5.18.0",
    "jose": "^5.2.0",
    "lru-cache": "^10.0.1",
    "morgan": "^1.10.0",
    "ms": "^2.1.3",
    "mysql2": "^3.1.2",
    "openid-client": "^5.6.4",
    "socket.io": "^4.7.3",
    "typeorm": "^0.3.15"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.4.0",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/morgan": "^1.9.4",
    "@types/ms": "^0.7.31",
    "@types/node": "^18.13.0",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "better-sqlite3": "^8.1.0",
    "eslint": "^8.0.1",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
    "eslint-plugin-promise": "^6.0.0",
    "husky": "^8.0.3",
    "jest": "^29.4.3",
    "jsonwebtoken": "^9.0.0",
    "lint-staged": "^14.0.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.0.2",
    "socket.io-client": "^4.7.4",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "ts-mockito": "^2.6.1",
    "ts-node": "^10.9.1",
    "typeorm-uml": "^1.6.5",
    "typescript": "*"
  }
}
